<%= form_for([@room, @room.reservations.new]) do |f| %>

	<div class="row">
		<div class="col-md-12 price_tag">
			<span><% if @room.Instant? %><i class="fa fa-bolt" style="color: #ffb400"></i> <% end %> $<%= @room.price %></span>
			<span class="pull-right">Per Month</span>
		</div>
	</div>

	<div class="row">
		<div class="col-md-6">
			<label>Check In</label>
			<%= f.text_field :start_date, readonly: 'true', placeholder: 'Start Date', class: "form-control datepicker" %>
		</div>
		<div class="col-md-6">
			<label>Check Out</label>
			<%= f.text_field :end_date, readonly: 'true', placeholder: 'End Date', class: "form-control datepicker", disabled: true %>
		</div>
	</div>

	<h4><span id="message"></span></h4>

	<div id="preview" style="display: none">
		<table class="reservation-table" >
			<tbody>
				<tr>
					<td>Price</td>
					<td class="text-right">$<%= @room.price %></td>
				</tr>
				<tr>
					<td>Day(s)</td>
					<td class="text-right">x <span id="reservation_days"></span></td>
				</tr>
				<tr id="special_details">
					<td colspan="2">
						Special Price <br>
						<ul id="special_list"></ul>
					</td>
				</tr>

				<tr>
					<td>Total</td>
					<td class="text-right">$<span id="reservation_sum"></span></td>
				</tr>
			</tbody>
		</table>
	</div>
	<br>

	<% if @room.Instant? %>
	<%= f.submit "Book Now", id: "btn_book", class: "btn btn-primary wide", disabled: 'true' %>

  <% else %>
	<%= f.submit "Request Now", id: "btn_book", class: "btn btn-primary wide", disabled: 'true' %>

	<% end %>


<% end %>

<script>

	function unavailable(date) {
		dmy = date.getDate() + "-" + (date.getMonth()+1) + "-" + date.getFullYear();
		return [$.inArray(dmy, unavailableDates) == -1];
	}

	$(function() {

		unavailableDates = [];
		specialDates = [];

		function specialCheck() {

			var start_date = $(this).datepicker('getDate');
			var end_date = $('#reservation_end_date').datepicker('getDate');
			var days = (end_date - start_date)/1000/60/60/24 + 1

			var input = {
				'start_date': start_date,
				'end_date': end_date,
				'room_id': <%= @room.id %>
			}

			$.ajax({
				url: '<%= preview_path(@room) %>',
				data: input,
				success: function(data) {

					if (data.conflict) {

						$('#message').text("This date range is not available.");
						$('#preview').hide();
						$('#btn_book').attr('disabled', true);

					} else {

						$('#preview').show();
						$('#btn_book').attr('disabled', false);

						// -- NEW PRICE CALCULATION
						var selectedDates = [];

						// Step 1 CREATE AN ARRAY OF SELECTED DATES
						while (start_date <= end_date) {
							selectedDates.push($.datepicker.formatDate('d-m-yy', new Date(start_date)));
							start_date.setDate(start_date.getDate() + 1);
						}

						// Step 2 create an array of special dates (custom price) within selected dates
						var selectedSpecialDates = specialDates.filter(function(sDate) {
							var d = $.datepicker.formatDate('d-m-yy', new Date(sDate.day));
							return selectedDates.indexOf(d) !== -1;
						});

						// Step 3 calculate the total amount with custom price if needed
						var total = (days - selectedSpecialDates.length) * <%= @room.price %>;
						if (selectedSpecialDates > 0 ) {
							$('#special_details').show();
							selectedSpecialDates.map(function (date) {
								total += date.price;
								$('#special_list').append('<li class="text-right">(' + date.day +'): $' + date.price +'</li>');
							});
						} else {
							$('#special_details').hide();
						}


						$('#reservation_days').text(days);
						$('#reservation_total').val(total);
					}
				}
			});

		}

		$.ajax({
			url: '<%= preload_path(@room) %>',
			//data: {'room_id': <%= @room.id %>},
			dataType: 'json',
			success: function(data) {

				specialDates = data.special_dates;

				$.each(data.reservations, function(arrID, arrValue) {
					for(var d = new Date(arrValue.start_date); d <= new Date(arrValue.end_date); d.setDate(d.getDate() + 1)) {
						unavailableDates.push($.datepicker.formatDate('d-m-yy', d));
					}
				});

				$.each(data.unavailable_dates, function(arrID, arrValue) {
						unavailableDates.push($.datepicker.formatDate('d-m-yy', new Date(arrValue.day)));
				});

				$('#reservation_start_date').datepicker({
					dateFormat: 'dd-mm-yy',
					minDate: 0,
					maxDate: '3m',
					beforeShowDay: unavailable,
					onSelect: function(selected) {
						$('#reservation_end_date').datepicker("option", "minDate", selected);
						$('#reservation_end_date').attr('disabled', false);
						specialCheck();
					}
				});

				$('#reservation_end_date').datepicker({
					dateFormat: 'dd-mm-yy',
					minDate: 0,
					maxDate: '3m',
					beforeShowDay: unavailable,
					onSelect: function(selected) {
						$('#reservation_start_date').datepicker("option", "maxDate", selected);
						specialCheck();
					}
				});

			}
		});

	});
</script>
