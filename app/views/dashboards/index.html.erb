<div class="row">
  <div class="col-md-3 col-xs-4">
    <div class="center">
      <%= image_tag avatar_url(current_user), class: "useravatar avatar-full" %>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="userprofileh2"><%= current_user.fullname %></h2>
      </div>
      <div class="dashboardpanel panel-body">
        <ul class="sidebar-list">
          <% if current_user.confirmation_token %>
            <li class="dasboardli">Email Address<span class="pull-right icon-babu"><i class="fa fa-check-circle-o"></i></span></li>
          <% end %>
          <% if current_user.provider %>
            <li class="dasboardli">Facebook<span class="pull-right icon-babu"><i class="fa fa-check-circle-o"></i></span></li>
          <% end %>
          <% if current_user.phone_verified %>
            <li class="dasboardli">Phone Number<span class="pull-right icon-babu"><i class="fa fa-check-circle-o"></i></span></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <div class="col-md-9 col-xs-8 ">

    <!-- Notification Panel -->
    <div class="panel panel-default">
      <div class="panel-heading">Notifications</div>
      <div class="panel-body">
          <%= link_to notifications_path do %>
            You have <span id="num_of_unread"><%= current_user.unread %></span> notification(s).
          <% end %>
      </div>
    </div>


  <div class="col-xs-12">
    <!-- Your Listings -->
    <div class="panel panel-default">
      <div class="panel-heading">Your Listings (<%= @rooms.length %>)</div>
      <div class="panel-body">
        <%= render partial: "rooms/rooms_list", locals: {rooms: @rooms} %>
      </div>
    </div>
  </div>


  </div>
</div>
